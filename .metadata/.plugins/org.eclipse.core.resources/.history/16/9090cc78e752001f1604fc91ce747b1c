		동등 조인 조건 (username 은 id다)  
		<if test="searchKey == 'ADDRESS'">
			AND ROAD_ADDRESS LIKE '%${searchWord}%'
			OR JIBUN_ADDRESS LIKE '%${searchWord}%'
			OR DETAIL_ADDRESS LIKE '%${searchWord}%'
		</if>
		 
     
    
		<if test="searchKey != 'ADDRESS' and isLikeOrEquals == 'like'">
